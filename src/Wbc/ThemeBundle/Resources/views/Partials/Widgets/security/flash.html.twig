        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <span class="fw-semi-bold">Warning:</span> {{ flash_message | raw }}
    </div>
{% endfor %}
{% for flash_message in app.session.flashbag.get('danger') %}
